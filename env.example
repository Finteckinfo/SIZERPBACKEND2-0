# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration - Allow both primary (siz.land) and satellite (erp.siz.land) domains
# For development: localhost origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
# For production: Update with your actual domains
# CORS_ORIGINS=https://siz.land,https://erp.siz.land,https://www.siz.land

# Database
DATABASE_URL="your_database_connection_string_here"

# Redis
REDIS_URL="your_redis_connection_string_here"

# NextAuth Configuration (for SSO with siz.land frontend)
# IMPORTANT: This MUST match the NEXTAUTH_SECRET in your Next.js frontend .env
NEXTAUTH_SECRET="your_nextauth_secret_here"

# Algorand Blockchain Configuration (for Escrow Payment System)
ALGORAND_NODE_URL="https://testnet-api.algonode.cloud" # Use mainnet for production
ALGORAND_NODE_TOKEN="" # Empty for AlgoNode (public node)
ALGORAND_INDEXER_URL="https://testnet-idx.algonode.cloud"
ALGORAND_NETWORK="testnet" # Change to "mainnet" in production

# Encryption for Escrow Private Keys
ENCRYPTION_SECRET="your_32_character_encryption_key_here_change_in_production"
# Or use AWS KMS (optional, recommended for production)
# KMS_KEY_ID="your_kms_key_id_here"

# Token Gate Configuration
# Set to 'true' to skip the 20 SIZ token requirement for project creation (useful for testing)
# Set to 'false' to enforce the 20 SIZ token requirement (production default)
SKIP_TOKEN_GATE=true

# Payment Processing
PAYMENT_CONFIRMATION_THRESHOLD=3 # Number of blockchain confirmations required
