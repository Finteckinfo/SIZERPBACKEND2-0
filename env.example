# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="your_database_connection_string_here"

# Redis
REDIS_URL="your_redis_connection_string_here"

# Clerk Authentication Configuration
CLERK_WEBHOOK_SECRET="your_webhook_secret_here"
CLERK_ISSUER_URL="https://pumped-sheep-45.clerk.accounts.dev"
CLERK_JWKS_URL="https://pumped-sheep-45.clerk.accounts.dev/.well-known/jwks.json"
CLERK_PUBLISHABLE_KEY="your_publishable_key_here"
CLERK_SECRET_KEY="your_secret_key_here"

# JWT Configuration - Use the JWKS public key for token verification
CLERK_JWKS_PUBLIC_KEY="your_jwks_public_key_here"

# Optional: Custom audience for JWT validation
# CLERK_AUDIENCE="https://sizerpbackend2-0-production.up.railway.app"

# Algorand Blockchain Configuration (for Escrow Payment System)
ALGORAND_NODE_URL="https://testnet-api.algonode.cloud" # Use mainnet for production
ALGORAND_NODE_TOKEN="" # Empty for AlgoNode (public node)
ALGORAND_INDEXER_URL="https://testnet-idx.algonode.cloud"
ALGORAND_NETWORK="testnet" # Change to "mainnet" in production

# Encryption for Escrow Private Keys
ENCRYPTION_SECRET="your_32_character_encryption_key_here_change_in_production"
# Or use AWS KMS (optional, recommended for production)
# KMS_KEY_ID="your_kms_key_id_here"

# Payment Processing
PAYMENT_CONFIRMATION_THRESHOLD=3 # Number of blockchain confirmations required